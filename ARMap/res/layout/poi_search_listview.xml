<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

	<ImageView android:id="@+id/poi_image"
		android:paddingTop="8dip"
		android:paddingBottom="3dip"
		android:layout_width="82px" 
		android:layout_height="92px" 
		android:paddingLeft="10dip" />
		
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_weight="1" >
	    
	    <TextView android:id="@+id/poi_name"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
	   		android:layout_weight="1"
			android:paddingTop="10dip"
			android:paddingBottom="5dip"
		    android:paddingLeft="10dip"
		    android:textColor="#ffffff"
		    android:ellipsize="end"
		    android:textSize="20dip" />
		    
		<TextView android:id="@+id/poi_number"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
			android:paddingBottom="5dip"
		    android:paddingLeft="10dip"
		    android:textColor="#afc500"
		    android:textSize="12dip"
		    android:visibility="gone" />
		    
	</LinearLayout>
    
	<TextView android:id="@+id/poi_distance"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:paddingTop="15dip"
		android:paddingBottom="5dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:textSize="20dip"
	    android:textColor="#00b0f0" />
	    
	<RadioButton android:id="@+id/radio"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:clickable="false" 
	    android:focusable="false"
		android:paddingTop="30dip"
		android:paddingBottom="10dip"
	    android:paddingLeft="10dip"
	    android:paddingRight="10dip"
	    android:visibility="gone" />
	   
</LinearLayout>
